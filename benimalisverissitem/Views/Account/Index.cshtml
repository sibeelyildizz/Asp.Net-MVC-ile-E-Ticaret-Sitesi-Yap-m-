@model IEnumerable<benimalisverissitem.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout3.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Sipariş Bilgileriniz</h2>
                <hr />

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Sipariş Numarası:</th>
                            <th>Sipariş Tarihi</th>
                            <th>Toplam Tutar</th>   
                            <th>Sipariş Durumu</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SiparisNo</td>
                                <td>@item.SiparisTarihi.ToShortDateString()</td>
                                <td>
                                    <i class="fa fa-try" aria-hidden="true"></i>
                                    @item.Toplam
                                </td>
                                <td>@item.SiparisDurumu</td>
                                <td>
                                    @Html.ActionLink("Detay", "Details", new { id = @item.Id }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
