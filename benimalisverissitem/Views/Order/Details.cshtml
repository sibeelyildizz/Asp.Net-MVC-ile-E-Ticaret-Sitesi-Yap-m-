

@model benimalisverissitem.Models.OrderDetailsModel


@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <h2>Sipariş Detay Bilgileri</h2>
            <hr />
            @if (TempData["message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["message"]
                </div>
            }

        <dl class="row">
            @*<dt class="col-sm-3">Müşteri:</dt>
            <dd class="col-sm-9">@Model.UserName*@
            <dd>

            <dt class="col-sm-3">Sipariş Durumu</dt>
            <dd class="col-sm-9">
                @using (Html.BeginForm("UpdateOrderState", "Order", FormMethod.Post))
                {
                    @Html.HiddenFor(i => i.OrderId)

                    <dl class="row">
                        <dt class="col-sm-8">
                            @Html.EnumDropDownListFor(i => i.SiparisDurumu, new { @class = "form-control" })
                        </dt>
                        <dd class="col-sm-4">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </dd>
                    </dl>
                }

            </dd>

            <dt class="col-sm-3">Sipariş Id</dt>
            <dd class="col-sm-9">@Model.OrderId</dd>
            <dt class="col-sm-3">Ad Soyad:</dt>
            <dd class="col-sm-9">@Model.ad  @Model.soyad</dd>

            <dt class="col-sm-3">Sipariş Numarası</dt>
            <dd class="col-sm-9">@Model.SiparisNo</dd>

            <dt class="col-sm-3">Total</dt>
            <dd class="col-sm-9">
                <i class="fa fa-try" aria-hidden="true"></i>
                @Model.Toplam
            </dd>

            <dt class="col-sm-3">Sipariş Tarihi</dt>
            <dd class="col-sm-9">@Model.SiparisTarihi</dd>


            <dt class="col-sm-3">Adres</dt>
            <dd class="col-sm-9">
                @Model.AdresBasligi
                <hr />
                @Model.Adres
                <br />
                @Model.Sehir - @Model.Semt - @Model.Mahalle
                <br />
                @Model.PostaKodu
            </dd>


            @foreach (var item in Model.Orderlines)
            {


                <a href="/ClientHome/Details/@item.Products_Id" class="btn btn-warning" align="right" target="_blank" float: right;>
                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                    ← ← Ürüne Git
                </a>
            }

        </dl>

        </div>
    </div>
</div>

